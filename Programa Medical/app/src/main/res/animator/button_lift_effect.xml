<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Efecto cuando el bot칩n est치 presionado o el cursor est치 encima -->
    <item android:state_pressed="true">
        <set>
            <objectAnimator
                android:duration="150"
                android:propertyName="translationZ"
                android:valueTo="8dp" />
            <objectAnimator
                android:duration="100"
                android:propertyName="scaleX"
                android:valueTo="1.05" />
            <objectAnimator
                android:duration="100"
                android:propertyName="scaleY"
                android:valueTo="1.05" />
        </set>
    </item>
    <item android:state_hovered="true">
        <set>
            <objectAnimator
                android:duration="150"
                android:propertyName="translationZ"
                android:valueTo="8dp" />
            <objectAnimator
                android:duration="100"
                android:propertyName="scaleX"
                android:valueTo="1.05" />
            <objectAnimator
                android:duration="100"
                android:propertyName="scaleY"
                android:valueTo="1.05" />
        </set>
    </item>
    <!-- Estado normal del bot칩n (sin levitar) -->
    <item>
        <set>
            <objectAnimator
                android:duration="150"
                android:propertyName="translationZ"
                android:valueTo="0dp" />
            <objectAnimator
                android:duration="100"
                android:propertyName="scaleX"
                android:valueTo="1.0" />
             <objectAnimator
                android:duration="100"
                android:propertyName="scaleY"
                android:valueTo="1.0" />
        </set>
    </item>
</selector>
